<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/myWidget48"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/myScrollView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

        <LinearLayout
            android:id="@+id/widget37"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/lblShelflabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Shelf label (Required):"
                android:textColor="@color/primary_text_dark"
                android:textStyle="bold" >
            </TextView>

            <EditText
                android:id="@+id/txtShelflabel"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="fill_horizontal"
                android:inputType="textCapWords"
                android:selectAllOnFocus="true"
                android:singleLine="true"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/lblShelfinfo1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Additional Infomation :"
                android:textColor="@color/primary_text_dark"
                android:textStyle="bold" >
            </TextView>

            <EditText
                android:id="@+id/txtShelfinfo1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="fill_horizontal"
                android:inputType="textCapWords"
                android:selectAllOnFocus="true"
                android:singleLine="true"
                android:textSize="18sp" />

         
               <TextView
                android:id="@+id/lblspinnershelf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="This shelf belong to rack : "
                android:textColor="@color/primary_text_dark"
                android:textStyle="bold" >
            </TextView>

            <Spinner
                android:id="@+id/spinnershelf"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="8dip"
                android:layout_marginRight="8dip"
                android:layout_marginTop="20dip"
                android:layout_weight="1" />
  <TextView
        android:id="@+id/lblbookonshelf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="List of book has this shelf :"
        android:textColor="@color/primary_text_dark"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        >
    </TextView>
    
    <ListView
                android:id="@+id/listbookonshelf"
                android:layout_width="fill_parent"
                android:layout_height="500dp" />
    
   
            <LinearLayout
                android:id="@+id/myWidget248"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal" >
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>