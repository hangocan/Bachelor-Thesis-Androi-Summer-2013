<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="2dp"
    android:paddingRight="2dp"
    >
    
    <View android:id="@+id/mydivider"
            android:background="@drawable/my_row_divider"
            android:layout_width="fill_parent"
            android:layout_height="1dp" />
        <View android:id="@+id/mydivider2"
            android:background="#fce677"
            android:layout_width="fill_parent"
            android:layout_height="1dp" />
        <View android:id="@+id/mydivider3"
            android:background="@drawable/my_row_divider"
            android:layout_width="fill_parent"
            android:layout_height="1dp" />
    
    <LinearLayout 
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >
        
        <TextView android:id="@+id/my_list_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/primary_text_dark"
            android:gravity="left"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="List of Editors: "/>
    
    </LinearLayout>
    
        
    <View android:id="@+id/mydivider"
            android:background="@drawable/my_row_divider"
            android:layout_width="fill_parent"
            android:layout_height="1dp" />
        <View android:id="@+id/mydivider2"
            android:background="#fce677"
            android:layout_width="fill_parent"
            android:layout_height="1dp" />
        <View android:id="@+id/mydivider3"
            android:background="@drawable/my_row_divider"
            android:layout_width="fill_parent"
            android:layout_height="1dp" />
    
   
 		<EditText
            android:id="@+id/Search"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Search... " 
            
            >
           
        </EditText>
        
        <ListView android:id="@android:id/list"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:scrollingCache="true"
              android:cacheColorHint="@color/primary_text_light"
              android:clickable="true"
              android:drawSelectorOnTop="false"
              android:dividerHeight="2dp"
               />
        <TextView android:id="@+id/android:empty"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:textColor="@color/primary_text_dark"
              android:textStyle="bold"
              android:text="No Editor !"/>
    
</LinearLayout>