<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/myWidget48"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/myScrollView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

        <LinearLayout
            android:id="@+id/widget37"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/lblbsbook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Name of book : "
                android:textColor="@color/primary_text_dark"
                android:textStyle="bold" >
            </TextView>

            <TextView
                android:id="@+id/bsbook"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" >
            </TextView>
<TextView
                android:id="@+id/text11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="1. Add new bookseller: "
                android:textColor="@color/primary_text_dark"
                android:textStyle="bold" >
            </TextView>
            <EditText
                android:id="@+id/instantbookseller"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:gravity="fill_horizontal"
                android:hint="New bookseller !"
                android:inputType="textCapWords"
                android:selectAllOnFocus="true"
                android:singleLine="true"
                android:textSize="18sp" >

                <requestFocus />
            </EditText>
    
        <Button
                android:id="@+id/btnewbookseller"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="New Bookseller" />
    
            <TextView
                android:id="@+id/lblspinnerbsname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="2. Please register the bookseller of the book : "
                android:textColor="@color/primary_text_dark"
                android:textStyle="bold" >
            </TextView>

            <Spinner
                android:id="@+id/spinnerbsname"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="8dip"
                android:layout_marginRight="8dip"
                android:layout_marginTop="20dip"
                android:layout_weight="1" />

            <Button
                android:id="@+id/btaddbookseller"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Add Bookseller" />

            <ListView
                android:id="@+id/listbookseller"
                android:layout_width="fill_parent"
                android:layout_height="500dp" />

            <LinearLayout
                android:id="@+id/myWidget248"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal" >
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

 </LinearLayout>