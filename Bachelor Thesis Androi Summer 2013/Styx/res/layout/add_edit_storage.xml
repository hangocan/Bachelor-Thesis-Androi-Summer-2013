<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/myWidget48"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >
 <ScrollView
    android:id="@+id/myScrollView"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    >
    <LinearLayout
        android:id="@+id/widget37"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
    >
    
    <TextView
        android:id="@+id/lblStorage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Storage name (Required):"
        android:textColor="@color/primary_text_dark"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        >
    </TextView>
       
    <EditText
            android:id="@+id/txtStorage"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:inputType="textCapWords"
            android:gravity="fill_horizontal" />
    
     <TextView
        android:id="@+id/lblStorageaddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Storage Address:"
        android:textColor="@color/primary_text_dark"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        >
    </TextView>
       
    <EditText
            android:id="@+id/txtStorageaddress"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:inputType="textCapWords"
            android:gravity="fill_horizontal" />
    
    
    
    <TextView
        android:id="@+id/lblStorageinfo1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Additional Information:"
        android:textColor="@color/primary_text_dark"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        >
    </TextView>
       
    <EditText
            android:id="@+id/txtStorageinfo1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:inputType="textCapWords"
            android:gravity="fill_horizontal" />
    
   
    <LinearLayout
      android:id="@+id/myWidget248"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:layout_marginTop="10dp"
      >
   
    </LinearLayout>
  </LinearLayout>
 </ScrollView>
</LinearLayout>
