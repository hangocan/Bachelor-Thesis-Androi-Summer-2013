<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Report" >

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true" 
        >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp" >

            <TextView
                android:id="@+id/TextViewReport"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:text="Report"
                android:textColor="@color/white"
                 android:typeface="serif"
                android:textSize="70sp"
                android:textStyle="bold|italic"
                />

        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
             android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
               
              
               android:textColor="@color/white"
                 android:typeface="serif"
                android:text="Date"
                android:textSize="25sp" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
             android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/todaydate"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
               
               
                android:textSize="25sp" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:layout_marginTop="20dp" >

            <TextView
                android:id="@+id/TextView2"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:textColor="@color/white"
                 android:typeface="serif"
                android:text="Total number of books"
                android:textSize="25sp" />

        </TableRow>

        <TableRow
            android:id="@+id/tableRow5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:layout_marginTop="20dp" >

            <TextView
                android:id="@+id/booktotalnumber"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
               android:textColor="@color/white"
               
                android:textSize="25sp" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:layout_marginTop="20dp" >
          
            <TextView
                android:id="@+id/TextView3"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                 android:textColor="@color/white"
                 android:typeface="serif"
                android:text="Number of books got rent"
                android:textSize="25sp" />

        </TableRow>

        <TableRow
            android:id="@+id/tableRow7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:layout_marginTop="20dp" >

            <TextView
                android:id="@+id/bookrentnumber"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
              
              
                android:textSize="20sp" />
        </TableRow>
         <TableRow
            android:id="@+id/tableRow8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:layout_marginTop="20dp" >
          
            <TextView
                android:id="@+id/TextView4"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                 android:textColor="@color/white"
                 android:typeface="serif"
                android:text="Number of author"
                android:textSize="25sp" />

        </TableRow>

        <TableRow
            android:id="@+id/tableRow9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:layout_marginTop="20dp" >

            <TextView
                android:id="@+id/authornumber"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
              
                android:textSize="20sp" />
        </TableRow>

          <TableRow
            android:id="@+id/tableRow10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:layout_marginTop="20dp" >
          
            <TextView
                android:id="@+id/TextView4"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                 android:textColor="@color/white"
                 android:typeface="serif"
                android:text="Number of editor"
                android:textSize="25sp" />

        </TableRow>

        <TableRow
            android:id="@+id/tableRow11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:layout_marginTop="20dp" >

            <TextView
                android:id="@+id/editornumber"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
              
                android:textSize="20sp" />
        </TableRow>
        
        <Button
            android:id="@+id/screenshot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Export" />

    </TableLayout>

</RelativeLayout>